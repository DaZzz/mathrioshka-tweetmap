.tweet-brush 
  display block
  position absolute
  top 20px
  right 20px
  width 300px
  height 200px
  background #f0f0f0
  box-shadow 0 0 1px rgba(0,0,0,.10), 0 1px 3px rgba(0,0,0,.30)
  border-radius 3px
  
  .brush-context
    width 100%
    height 100%  
  
  .brush
    fill rgba(0,0,0,.1)        