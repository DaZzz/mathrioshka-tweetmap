@import './tweet-map'
@import './tweet-brush'

html, body, #app, .tweet-map-application
  width 100%
  height 100%
  margin 0
  padding 0

.tweet-map-application
  position relative

.refetch
  position absolute
  display block
  bottom 50px
  left 50%
  margin-left -100px
  width 200px
  z-index 10
  background #0097DC
  padding 5px
  font-size 24px
  color white
  border-radius 2px
  border none
  cursor pointer
  box-shadow 0 1px 4px rgba(0,0,0,.3)

  &:hover
    background darken(#0097DC,5)

  &:active
    background darken(#0097DC,10)
    box-shadow 0 1px 8px rgba(0,0,0,.7)

  &:active,
  &:focus
    outline none

